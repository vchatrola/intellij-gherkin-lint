<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.vchatrola.gherkinlint</id>
    <name>GherkinLint</name>
    <vendor email="viveknchatrola@gmail.com" url="https://www.linkedin.com/in/viveknchatrola/">Vivek Chatrola</vendor>
    <category>Testing</category>
    <idea-version since-build="223" until-build="253.*"/>

    <description><![CDATA[
    GherkinLint validates BDD Gherkin steps in the editor and enforces team style.
    <b>GherkinLint</b><br/>
    Validate Gherkin steps inâ€‘editor, enforce team style, and reduce duplicate BDD scenarios.
    Built for QA and automation teams who want consistent, clean feature files.
]]></description>

    <depends>com.intellij.modules.platform</depends>


    <extensions defaultExtensionNs="com.intellij">
        <toolWindow factoryClass="com.vchatrola.plugin.toolWindow.GherkinLintWindowFactory"
                    id="GherkinLint"
                    anchor="bottom"
                    secondary="false"
                    canCloseContents="true"
                    icon="AllIcons.Actions.Preview"/>
    </extensions>

    <!-- Register services -->
    <extensions defaultExtensionNs="com.intellij">
        <!-- This ensures MyPluginService is recognized and initialized -->
        <applicationService
                serviceInterface="com.vchatrola.plugin.service.GherkinLintService"
                serviceImplementation="com.vchatrola.plugin.service.GherkinLintServiceImpl"/>
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <applicationConfigurable instance="com.vchatrola.plugin.setting.GherkinLintConfigurable"
                                 parentId="tools"
                                 displayName="GherkinLint"/>
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <notificationGroup id="GherkinLint" displayType="BALLOON"/>
    </extensions>

    <actions>
        <action id="Validate.Gherkin.Action"
                class="com.vchatrola.plugin.action.GherkinLintAction"
                text="Validate Gherkin"
                icon="AllIcons.Actions.Preview"
                description="Analyzes the selected Gherkin text for syntax errors and best practices.">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>
    </actions>

</idea-plugin>
